    <node pkg="learning_tf" type="turtle_tf_broadcaster" name="turtle_mover">
        <param name="distance" type="double" value="1.1" />
        <param name="period" type="double" value="1" />
    </node>
    <node pkg="learning_tf" type="turtle_tf_broadcaster" name="turtle_mover_2">
        <param name="distance" type="double" value="2.1" />
        <param name="period" type="double" value="1" />
        <remap from="/turtle1/cmd_vel" to="/turtle2/cmd_vel"/>
    </node>
</launch>
